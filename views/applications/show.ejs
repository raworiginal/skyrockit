<%- include('../partials/_html-head.ejs', {title: 'Show'}) %>
<%- include('../partials/_nav-bar.ejs') %>
<div class="container">
  <h1>
    <%= application.title %>at
    <%= application.company %>
  </h1>
  <% if (application.notes) { %>
  <p>Notes:
    <%= application.notes %>
  </p>
  <% } %>
  <% if (application.postingLink) { %>
  <a href="<%= application.postingLink %>">View job
    posting</a>
  <% } %>
  <p>Current Status:
    <%= application.status %>
  </p>
  <form action="/users/<%= user._id %>/applications/<%= application._id %>?_method=DELETE" method="POST"> <button type="submit">Delete This Application</button> </form>
</div>
</body>

</html>